#:import utils kivy.utils

<LottoScreen>:
    FloatLayout:
        canvas:
            # backgrond color change
            Color:
                rgb: utils.get_color_from_hex("#6fa8dc")
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            pos_hint: {"top": 1, "left" : 1}
            size_hint: 1, .1
            text: "    lotto application"
            color: 1,1,1,1
            text_size: self.size
            id: "title"
            halign: "left"
            valign: "middle"
            canvas.before:
                Color:
                    rgba: utils.get_color_from_hex("#0366d6")
                Rectangle:
                    size: self.size
                    pos: self.pos
        Label:
            pos_hint: {"top": .9, "left": 1}
            size_hint: 1, .1
            text: "this week (%d) winning number" %(root.this_round)
            color: 0,0,0,1
            id: "winning_number"
        GridLayout:
            #put icon winning numbers
            rows: 1
            pos_hint: {"top": .8, "left": 1}
            size_hint: 1, .1
            Image:
                source: "icon/%d.png" %(root.this_win[0])
            Image:
                source: "icon/%d.png" %(root.this_win[1])
            Image:
                source: "icon/%d.png" %(root.this_win[2])
            Image:
                source: "icon/%d.png" %(root.this_win[3])
            Image:
                source: "icon/%d.png" %(root.this_win[4])
            Image:
                source: "icon/%d.png" %(root.this_win[5])
            Image:
                source: "icon/plus.png"
            Image:
                source: "icon/%d.png" %(root.this_win[6])
        Label:
            pos_hint: {"top": .7, "left": 1}
            size_hint: 1, .05
            text: "    winning money"
            color: 0,0,0,1
            id: winning_money
            text_size: self.size
            halign: "left"
            valign: "middle"
        Label:
            pos_hint: {"top": .65, "left": 1}
            size_hint: 1, .15
            text: "Total win amount : %d won\n winner number : %d \n winner amount : %d won" %(root.this_prize[0] ,root.this_prize[1], root.this_prize[2])
            color: 0,0,0,1
            id: winning_money
            text_size: self.size
            halign: "left"
            valign: "middle"
        GridLayout:
            #banner grid
            cols: 1
            pos_hint: {"top": .5, "left": 1 }
            size_hint: 1, .1
            Button:
                text:
                    "click here"
                on_release:
                    print("released click button")
                    app.change_screen("setting_screen")

        Label:
            pos_hint: {"top": .3, "left": 1}
            size_hint: 1, .1
            text: "today lucky number"
            id: "lucky_number"
            canvas.before:
                Color:
                    rgba: utils.get_color_from_hex("#0366d6")
                Rectangle:
                    size: self.size
                    pos: self.pos
        GridLayout:
            #put icon winning numbers
            rows: 1
            pos_hint: {"top": .2, "left": 1}
            size_hint: 1, .1
            Image:
                source: "icon/%d.png" %(root.one)
            Image:
                source: "icon/%d.png" %(root.two)
            Image:
                source: "icon/%d.png" %(root.three)
            Image:
                source: "icon/%d.png" %(root.four)
            Image:
                source: "icon/%d.png" %(root.five)
            Image:
                source: "icon/%d.png" %(root.six)
            Image:
                source: "icon/plus.png"
            Image:
                source: "icon/%d.png" %(root.seven)